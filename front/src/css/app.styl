// ### Adding debug to any element will highlight it.

[debug], [debug] *:not(g):not(path) {
  color:                 hsla(210, 100%, 100%, 0.9) !important;
  background:            hsla(210, 100%,  50%, 0.5) !important;
  outline: solid 0.25rem hsla(210, 100%, 100%, 0.5) !important;

  box-shadow: none !important;
  filter:     none !important;
}

// Makes plyr (video and audio experiences) the scrub bar take up the entre remaining space at the bottom
.plyr__progress__container
    flex 1
// Plyr slider thumb resize
.plyr--full-ui input[type='range']
  // Chrome
  &::-webkit-slider-thumb
    height 0.7em!important
    width 0.7em!important
    margin-top -2px!important
  // Firefox
  &::-moz-range-thumb
    height 0.7em!important
    width 0.7em!important
    margin-top -2px!important
// Volume styling
.sdVolumeBtnContainer
  margin-right 7px
.sdVolumeRange
  opacity 0
.sdVolumeRange.plyr__volume, .sdVolumeBtnContainer.plyr__volume
  flex 0!important
  width 20px
  min-width 20px
  transition: all 0.7s
  transition-timing-function: cubic-bezier(1, 0.7, 0.5, 0.3)
.sdVolumeBtnContainer:hover + .sdVolumeRange
  flex 1!important
  opacity 1
.sdVolumeRange:hover
  flex 1!important
  opacity 1
