// Animations
.sdTransitions > *
  transition: all 1s ease-in-out
.sdListTransitions > *
  transition: all 350ms ease

.sdEase
  transition transform 2s
.sdEase-enter,
.sdEase-leave-to
  opacity 0
  transform translateX(-3em) scale(.9)
.sdEase-leave-active
  position absolute
  transform translate(-3em,-3em) scale(.9)
.sdSlideZoom
  transition all 2s
.sdSlideZoom-enter,
.sdSlideZoom-leave-to
  opacity 0
  transform translateX(3em) scale(.95)
.sdSlideZoom-leave-active
  opacity 0
  transform translate(3em) scale(.95)

