                "on": ["input"],
                "props": {
                  "label": "Associated images",
                  "caption": "The first image is the movie poster (2:3), the 2nd is the cover/display art (16:9), additional images can be used at your discression",
                  "display": "standard",
                  "aspects": ["2:3", "16:9"] }
              }
            },
